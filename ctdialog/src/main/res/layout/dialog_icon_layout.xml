<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_top_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_dialog_top_half_dark_normal"
        android:paddingTop="70dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/ct_dialog_title"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="6"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text=""
            android:textColor="#FF797BA6"
            android:textSize="14sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ct_line_dimen"
            android:layout_below="@id/tv_msg"
            android:layout_marginTop="20dp"
            android:background="@color/ct_dark_line_color" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_top_area"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_cancel_dark_normal"
            android:gravity="center"
            android:text="@string/ct_dialog_cancel"
            android:textColor="#FFFFE551"
            android:textSize="16sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="@dimen/ct_line_dimen"
            android:layout_height="47dp"
            android:background="@color/ct_dark_line_color" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_confirm_dark_normal"
            android:gravity="center"
            android:text="@string/ct_dialog_confirm"
            android:textColor="#FFFFE551"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ic_dialog_type"
        android:layout_width="81dp"
        android:layout_height="94dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_dialog_success" />

</RelativeLayout>