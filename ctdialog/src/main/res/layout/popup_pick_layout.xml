        <!--android:id="@+id/tv_negative"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/ct_selector_item_dimen"-->
        <!--android:text="关闭"-->
        <!--android:background="@drawable/selector_shape_dialog_bottom_half"-->
        <!--android:gravity="center"-->
        <!--android:textSize="16sp"-->
        <!--android:textColor="@color/ct_red"/>-->

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ct_selector_item_dimen"
        android:text="@string/ct_dialog_cancel"
        android:textStyle="bold"
        android:background="@drawable/selector_shape_dialog_selector_cancel"
        android:gravity="center"
        android:textColor="@color/ct_colorPrimary"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>