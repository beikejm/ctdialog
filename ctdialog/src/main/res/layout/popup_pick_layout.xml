<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:background="@drawable/selector_shape_dialog_top_half"
        android:gravity="center"
        android:padding="10dp"
        android:text="标题"
        android:textColor="@color/ct_progress_bar_color"
        android:textSize="13sp" />

    <View
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ct_line_dimen"
        android:background="@color/ct_line_color_1"/>

    <LinearLayout
        android:id="@+id/linear_add_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

