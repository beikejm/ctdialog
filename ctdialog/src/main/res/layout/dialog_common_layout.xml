<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_msg_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="@drawable/shape_common_dialog_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/ct_dialog_title"
            android:textColor="@color/ct_black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/ct_black"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="是否要删除"
            android:textSize="14sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ct_line_dimen"
            android:layout_below="@id/tv_msg"
            android:layout_marginTop="20dp"
            android:background="@color/ct_line_color" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/relative_msg_area"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ct_dialog_cancel"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/selector_shape_dialog_cancel"/>

        <View
            android:id="@+id/line1"
            android:layout_width="@dimen/ct_line_dimen"
            android:layout_height="match_parent"
            android:background="@color/ct_line_color" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ct_dialog_confirm"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/selector_shape_dialog_confirm" />
    </LinearLayout>

</RelativeLayout>