<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/ct_progress_bar_color" />
            <corners android:radius="@dimen/ct_progress_bar_radius" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/ct_colorPrimary" />
                <corners android:radius="@dimen/ct_progress_bar_radius" />
            </shape>
        </clip>
    </item>
</layer-list>